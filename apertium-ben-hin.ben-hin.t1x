    </def-macro>
  </section-def-macros>

  <section-rules>
    <rule comment="ADJ NOUN">
        <pattern>
          <pattern-item n="adj" />
          <pattern-item n="nom"/>
        </pattern>
        <action>
          <call-macro n="adj_init">
                  <with-param pos="1" />
              </call-macro>
          <out>
            <chunk name="adj_noun">
              <tags>
                <tag><clip pos="2" side="tl" part="gen"/></tag>
                <tag><clip pos="2" side="tl" part="nbr"/></tag>
              </tags>

              <lu>
                <clip pos="1" side="tl" part="lem"/>
                <clip pos="1" side="tl" part="a_adj"/>
                <clip pos="2" side="tl" part="gen"/>
                <clip pos="2" side="tl" part="nbr"/>
                <var n="casevar"/>
              </lu>
              <b/>
            
              <lu>
                <clip pos="2" side="tl" part="lem"/>
                <clip pos="2" side="tl" part="a_n"/>
                <clip pos="2" side="tl" part="gen"/>
                <clip pos="2" side="tl" part="nbr"/>
                <clip pos="2" side="tl" part="case"/>
              </lu>
            </chunk>
          </out>
        </action>
      </rule>

    <rule comment="REGLA: ADJ">
      <pattern>
        <pattern-item n="adj" />
      </pattern>
      <action>
              <call-macro n="adj_init">
                  <with-param pos="1" />
              </call-macro>
        <out>
          <chunk name="adj">
            <tags>
              <tag><clip pos="1" side="tl" part="gen"/></tag>
              <tag><clip pos="1" side="tl" part="nbr"/></tag>
             </tags>
          
          <lu>
            <clip pos="1" side="tl" part="lem"/>
            <clip pos="1" side="tl" part="a_adj"/>
            <var n="genvar"/>
            <var n="nbrvar"/>
            <var n="casevar"/>
          </lu>
          </chunk>
        </out>
      </action>
    </rule>

    <rule comment="REGLA: NOM">
      <pattern>
        <pattern-item n="nom" />
      </pattern>
      <action>
        
        <out>
          <chunk name="nom">
            <tags>
              <tag><lit-tag v="SN"/></tag>
              <tag><clip pos="1" side="tl" part="gen"/></tag>
              <tag><clip pos="1" side="tl" part="nbr"/></tag>
             </tags>
            <lu>
                <clip pos="1" side="tl" part="lem"/>
                <clip pos="1" side="tl" part="a_n"/>
                <clip pos="1" side="tl" part="gen"/>
                <clip pos="1" side="tl" part="nbr"/>
                <clip pos="1" side="tl" part="case"/>
            </lu>
          </chunk>
        </out>

      </action>
    </rule>
<!-- working on transfer rules for vblex -->
    <rule comment="REGLA: VBLEX">
      <pattern>
        <pattern-item n="present"/>
      </pattern>
      <action>
              <call-macro n="verb_init">
                  <with-param pos="1" />
              </call-macro>
            <choose>
              <when>
                <test>
                  <equal>
                    <clip pos="1" side="sl" part="a_neg"/>
                    <lit-tag v="neg"/>
                  </equal>
                </test>
                <out>
                  <chunk name="neg">
                    <tags>
                      <tag><lit-tag v="neg"/></tag>
                    </tags>
                  <lu>
                  <lit v="नहीं"/>
                  <lit-tag v="adv"/>
                </lu>
                <b/>
                </chunk>
                </out>
              </when>
          </choose>
        <out>
          <chunk name="verb" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="VP pres"/></tag>
              <tag><var n="genvar"/></tag>
              <tag><var n="nbrvar"/></tag>
            </tags>
            <b/>
            <lu>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="a_verb"/>
              <clip pos="1" side="tl" part="transivity"/>
              <lit-tag v="pres"/>
              <clip pos="1" side="tl" part="a_cntverb"/>
              <var n= "persvar"/>
              <var n="genvar"/>
              <var n="nbrvar"/>
              <!-- <clip pos="1" side="tl" part="persvar"/> -->
            </lu>
          </chunk>
        </out>
      </action>
    </rule>


    <rule comment="vblex pcnd in bengali">
      <pattern>
        <pattern-item n="pcnd"/>
      </pattern>
      <action>
      <out>
        <chunk name="verb pcnd" case="caseFirstWord">
          <tags>
            <tag><lit-tag v="VP pcnd"/></tag>
          </tags>
     
        <lu>
           <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="a_verb"/>
              <lit-tag v="pcnd"/>
        </lu>
           </chunk>
      </out>
    </action>
    </rule>



    <rule comment="REGLA: VBLEX ">
      <pattern>
              <pattern-item n="inf"/>
      </pattern>
      <action>
              <call-macro n="verb_init">
                  <with-param pos="1" />
              </call-macro>
        <out>
          <chunk name="verbinf" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="VP inf"/></tag>
              <tag><var n="genvar"/></tag>
              <tag><var n="nbrvar"/></tag>
            </tags>

            <lu>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="a_verb"/>
              <lit-tag v="tv"/>
              <lit-tag v="inf"/>
              <lit-tag v="nom"/>
              <var n="genvar"/>
                            <!-- <clip pos="1" side="tl" part="persvar"/> -->
            </lu>
          </chunk>
        </out>
      </action>
    </rule>

    <rule comment="REGLA: VBLEX ">
      <pattern>
        <pattern-item n="vblex"/>
      </pattern>
      <action>
              <call-macro n="verb_init">
                  <with-param pos="1" />
              </call-macro>
        <out>
          <chunk name="verb" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="VP past"/></tag>
              <tag><var n="genvar"/></tag>
              <tag><var n="nbrvar"/></tag>
            </tags>

            <lu>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="a_verb"/>
              <var n="tvvar"/>
              <lit-tag v="past"/>
              <clip pos="1" side="tl" part="a_cntverb"/>
              <var n= "persvar"/>
              <var n="genvar"/>
              <var n="nbrvar"/>
             <clip pos="1" side="tl" part="persvar"/> 
            </lu>
          </chunk>
        </out>
      </action>
    </rule>

  <rule comment="REGLA: VBLEX ">
