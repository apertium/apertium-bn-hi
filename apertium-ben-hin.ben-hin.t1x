            <let>
                  <var n ="nbrvar"/>
                        <clip part="nbr" pos="1" side="tl"/>
            </let>
        </when>
  <otherwise>
          <let>
        <var n ="nbrvar"/>
              <lit-tag v="sg"/>
          </let>
