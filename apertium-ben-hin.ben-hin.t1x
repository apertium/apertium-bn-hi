            </equal>
            </or>
          </test>
        <let>
              <var n ="persvar"/>
              <clip part="pers" pos="1" side="tl"/>
        </let>
        <let>
              <var n="tvvar"/>
              <lit-tag v="tv"/>
        </let>
        </when>
        <otherwise>
          <let>
              <var n ="persvar"/>
              <lit-tag v="p3"/>
          </let>
          <let>
              <var n="tvvar"/>
              <lit-tag v="iv"/>
          </let>
        </otherwise>
      </choose>
    </def-macro>

