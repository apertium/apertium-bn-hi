DELIMITERS = "<$.>" ;
LIST NOUN = n;
LIST ADJECTIVE =adj;
LIST ADVERB =adv;
LIST NUM =num;
LIST DET =det;
LIST PRONOUN =prn;
SELECT ADJECTIVE IF
	(0 ADJECTIVE)
	(0 ADVERB)
	(1 ADJECTIVE)
	(1 NOUN);

SELECT ADVERB IF
	(0 NOUN)
	(0 ADVERB)
	(1 ADVERB);

SELECT ADJECTIVE IF
	(0 NOUN)
	(0 ADJECTIVE);

SELECT DET IF
	(0 DET)
	(0 NUM)
	(0 ADJECTIVE);

SELECT PRONOUN IF
		(0 PRONOUN)
		(0 NOUN)
		(0 DET)
		(1 NOUN);
